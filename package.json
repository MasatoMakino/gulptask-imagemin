{
  "name": "@masatomakino/gulptask-imagemin",
  "version": "0.3.6",
  "description": "imagemin task for gulp.js",
  "main": "bin/index.js",
  "types": "bin/index.d.ts",
  "bin": {
    "gulptask-imagemin": "bin/CLI.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/gulptask-imagemin.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "files": [
    "bin"
  ],
  "dependencies": {
    "@masatomakino/newer-files": "^0.1.2",
    "chokidar": "^3.5.3",
    "commander": "11.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.1",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "tsc",
    "watch": "npm run build -- -w",
    "run": "gulp images",
    "testNode": "node sample_node_script.js",
    "testCLI": "npx @masatomakino/gulptask-imagemin --srcDir ./srcImg/img --distDir ./dist",
    "testCLIWithScaleOption": "npm run testCLI -- --scales '',1.0/'_xs',0.5/'_m',0.75",
    "watchCLI": "npm run testCLI -- -W",
    "testLocal": "node bin/CLI.js --srcDir ./srcImg/img --distDir ./dist",
    "watch:testLocal": "npm run testLocal -- -W",
    "testLocalWithColour": "node bin/CLI.js --srcDir ./srcImg/img --distDir ./dist --colours 8",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/gulptask-imagemin/issues"
